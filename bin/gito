#!/usr/bin/env ruby

file = File.read(".git/config")
repo = file.split("\n").detect { |line| line.match(/url\s=\s*/) }
uri = repo.match(/url\s=\s.*(github.*)/)[1].gsub(/\.git$/, "").gsub(":", "/")

uri = case(ARGV[0])
  when "pulls" then "#{uri}/pulls"
  when "issues" then "#{uri}/issues"
  when nil then uri
  else "#{uri}/tree/master/#{ARGV[0]}"
end

`open http://#{uri}`
